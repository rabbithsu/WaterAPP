<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttun"
            android:id="@+id/buttontext"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/result"
        android:id="@+id/scan"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/buttontext"
        android:layout_alignLeft="@+id/buttontext"
        android:layout_alignStart="@+id/buttontext"
        android:layout_alignRight="@+id/buttontext"
        android:layout_alignEnd="@+id/buttontext" />

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            android:id="@+id/resulttext"
            android:layout_below="@+id/scan" />

</RelativeLayout>

